<h1><%= @pet.name %></h1>
<h3><%= @pet.species %></h3>
<p><%= @pet.found_on %></p>
<p><%= link_to 'Edit', edit_pet_path(@pet), class: "btn btn-warning" %></p>
<p><%= link_to 'Delete', pet_path(@pet), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"%></p>
<p><%= link_to 'All Pets', pets_path %></p>
