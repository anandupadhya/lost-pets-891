<h1><%= @pet.name %></h1>
<h3><%= @pet.species %></h3>
<p><%= @pet.found_on %></p>

<h2>Comments</h2>
<% @pet.comments.each do |comment| %>
  <p>
    <%= comment.author %> - <em><%= comment.content %> (id: <%= comment.id %>)</em>
    <%= link_to '(X)', comment_path(comment), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </p>
<% end %>

<%= simple_form_for([@pet, @comment]) do |f| %>
  <%= f.input :author %>
  <%= f.input :content %>
  <%= f.submit %>
<% end %>


<p><%= link_to 'Edit', edit_pet_path(@pet), class: "btn btn-warning" %></p>
<p><%= link_to 'Delete', pet_path(@pet), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"%></p>
<p><%= link_to 'All Pets', pets_path %></p>
